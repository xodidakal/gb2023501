	<select id="mkhSelectBoardCnt" resultType="int">
		<![CDATA[
			SELECT count(*)
			FROM   board
			WHERE  b_category = #{b_category}
			AND	   b_regi_date < TRUNC(sysdate) + 1
		]]>
	</select>
	
	<!-- ori. -->
	<select id="mkhSelectBoardList" parameterType="board" resultType="board">			
		<![CDATA[
			SELECT *
		    FROM
		    (
		        SELECT rownum rn, a.*
			    FROM
			    (
				       SELECT 	b.*, m.m_name,
					       		(
					       		 SELECT count(*)
					       		 FROM   board_comment
					       		 WHERE  b_num = b.b_num
					       		 ) comment_count
				       FROM  	board b, member m
				       WHERE 	m.m_num = b.m_num
				       AND 	 	b.b_category = #{b_category}
				       AND		b.b_regi_date < TRUNC(sysdate) + 1
			    	   ORDER BY b.b_flag asc, b.b_ref_num desc, b.b_regi_date DESC
			    ) a
		    )
		    WHERE rn BETWEEN #{start} AND #{end}
		]]>
	</select>
	
